{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "entryPointStrategy": "expand",
    "out": "docs"
  },
  "lib": ["es2015"]
}
